<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="Listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="Listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please provide short description.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input type="file" name="Listing[image][url]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="Listing[price]" placeholder="Enter price" class="form-control" min="1" required>
                    <div class="invalid-feedback">
                        Enter valid price.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="Listing[location]" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a valid location.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form label">Country</label>
                    <input type="text" name="Listing[country]" placeholder="Enter country name"class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a valid country.
                    </div>
                </div>
                <br>
                <button class="btn btn-dark btn-add">Add</button>
                <br><br>
            </form>
        </div>
    </div>