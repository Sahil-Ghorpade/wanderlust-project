<% layout("/layouts/boilerplate") %>

<style>
#filters-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.7rem 0;
    margin-bottom: 0.5rem;
    position: sticky;
    top: 5rem;
    background: white;
    z-index: 50;
}

#filters-scroll {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    scrollbar-width: thin;
    white-space: nowrap;
}

#filters-scroll::-webkit-scrollbar {
    height: 6px;
}

#filters-scroll::-webkit-scrollbar-thumb {
    background: #ddd;
    border-radius: 8px;
}

.filter {
    text-align: center;
    cursor: pointer;
    opacity: 0.7;
    transition: 0.2s;
    min-width: 70px;
}

.filter:hover {
    opacity: 1;
    transform: translateY(-3px);
}

.filter i {
    font-size: 1.4rem;
}

.filter p {
    margin: 0.3rem 0 0;
    font-size: 0.85rem;
}

#tax-fixed {
    flex-shrink: 0;
    border: 1px solid #ddd;
    border-radius: 20px;
    padding: 0.6rem 1rem;
    background: white;
    margin-left: 1rem;
    white-space: nowrap;
}

@media (max-width: 576px) {
    #tax-fixed label {
        font-size: 0.85rem;
    }
    #tax-fixed label::after {
        content: "After tax";
    }
    #tax-fixed label span {
        display: none;
    }
}

@media (min-width: 577px) {
    #tax-fixed label::after {
        content: "";
    }
}
</style>

<div id="filters-bar">

    <div id="filters-scroll">
        <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
        <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
        <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
        <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
        <div class="filter"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></div>
        <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Amazing pools</p></div>
        <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
        <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
        <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
    </div>

    <div id="tax-fixed">
        <div class="form-check form-switch mb-0">
            <input class="form-check-input" type="checkbox" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">
                <span>Display total after taxes</span>
            </label>
        </div>
    </div>

</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListing) { %>
        <a href="/listings/<%= listing._id %>" class="listing-links">
            <div class="card col listing-cards">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay">
                    <h5 class="card-title"></h5>
                    <p class="card-text"></p>
                    <p class="card-text"><small></small></p>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info">&nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");

    taxSwitch.addEventListener("change", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (info of taxInfo) {
            if (taxSwitch.checked) {
                info.style.display = "inline";
                info.style.opacity = "1";
            } else {
                info.style.opacity = "0";
                setTimeout(() => info.style.display = "none", 300);
            }
        }
    });
</script>
