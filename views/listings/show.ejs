<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<style>
  /* --- BUTTON SECTION --- */
  .showbtn {
    display: flex;
    gap: 12px;
    margin-top: 10px;
  }
  .showbtn form {
    flex: 1;
  }
  .showbtn button {
    width: 100%;
  }

  /* --- CARD SHADOW --- */
  .listing-cards {
    box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
    border: none;
  }

  /* --- SECTION SPACING --- */
  .section-header {
    margin-top: 2.2rem;
    margin-bottom: 1rem;
  }
</style>

<div class="row mt-3">
  <div class="col-12 col-md-10 col-lg-8 mx-auto mb-3">

    <!-- Title -->
    <h3 class="mb-3"><%= listing.title %></h3>

    <!-- MAIN LISTING CARD -->
    <div class="card listing-cards">
      <img src="<%= listing.image.url %>" class="card-img-top object-fit-cover" alt="listing_image" style="height: 300px;">

      <div class="card-body">
        <p class="card-text">
          Listed by <b>@<%= listing.owner.username %></b><br>
          <%= listing.description %><br>
          Price: â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
          Location: <%= listing.location %><br>
          Country: <%= listing.country %><br>
        </p>

        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="showbtn">
          <form method="get" action="/listings/<%= listing.id %>/edit">
            <button class="btn btn-danger btn-add">
              <i class="fa-solid fa-pen-to-square"></i> Edit
            </button>
          </form>

          <form method="post" action="/listings/<%= listing.id %>?_method=DELETE">
            <button class="btn btn-dark">
              <i class="fa-solid fa-trash-can"></i> Delete
            </button>
          </form>
        </div>
        <% } %>
      </div>
    </div>

    <hr class="mt-4">

    <!-- REVIEWS SECTION -->
    <% if (listing.reviews.length > 0) { %>
    <h4 class="section-header">All Reviews</h4>

    <div class="row">
      <% for (let review of listing.reviews) { %>
      <div class="col-12 col-md-6 mb-3"> 
        <div class="card p-2" style="border-radius: 10px;"> <!-- inner padding + rounded -->
          <div class="card-body">

            <h6 class="card-title fw-semibold">@<%= review.author.username %></h6>
            <p class="card-text mb-0"><%= review.comment %></p>

            <p class="starability-result card-text" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> stars
            </p>

            <% if (currUser && currUser._id.equals(review.author._id)) { %>
            <form class="mt-2 text-end"
                  method="post"
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark w-auto px-3">Delete</button>
            </form>
            <% } %>

          </div>
        </div>
      </div>
      <% } %>
    </div>

    <hr>
    <% } %>

    <!-- LEAVE REVIEW -->
    <% if (currUser) { %>
    <h4 class="section-header"><u>Leave a Review</u></h4>

    <form method="post" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
      <label for="rating" class="form-label">Rating</label>

      <fieldset class="starability-slot" id="rating">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5">5 stars</label>
      </fieldset>

      <div class="mt-3 mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please submit some comment for review</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr>
    <% } %>

    <!-- MAP SECTION -->
    <h3 class="section-header">Where you'll be</h3>

    <div class="row">
      <div class="col-12 col-md-10 col-lg-6 mb-3">
        <div id="map"></div>
      </div>
    </div>

  </div>
</div>

<script src="/JS/map.js"></script>
