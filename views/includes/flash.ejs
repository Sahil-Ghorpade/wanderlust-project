<% if (success && success.length) { %>
  <div class="flash-container">
    <div class="alert alert-success alert-dismissible fade show text-center flash-slide" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="flash-container">
    <div class="alert alert-danger alert-dismissible fade show text-center flash-slide" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>
