<% layout("/layouts/boilerplate") %>

<style>
.signup-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
}

.signup-card {
    width: 100%;
    max-width: 420px;
    padding: 2rem;
    border-radius: 15px;
    background: white;
    box-shadow: 0 4px 18px rgba(0,0,0,0.08);
    animation: fadeUp 0.4s ease-in-out;
}

.signup-title {
    font-weight: 600;
    margin-bottom: 1.5rem;
}

.form-control {
    padding-left: 2.4rem;
    height: 45px;
    border-radius: 10px;
}

.input-group-custom {
    position: relative;
}

.input-icon {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #777;
}

.btn-signup {
    width: 100%;
    background-color: #fe424d;
    color: white;
    border-radius: 30px;
    padding: 0.7rem;
    border: none;
    font-weight: 600;
    transition: 0.2s;
}

.btn-signup:hover {
    background-color: #e63a44;
}

.login-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.95rem;
}

.login-link a {
    font-weight: 600;
    text-decoration: none;
}

.login-link a:hover {
    text-decoration: underline;
}

@keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0); }
}
</style>

<div class="signup-wrapper">
    <div class="signup-card">

        <h2 class="signup-title">Create your account</h2>

        <form action="/signup" method="post" class="needs-validation" novalidate>

            <!-- Username -->
            <div class="mb-3 input-group-custom">
                <i class="fa-solid fa-user input-icon"></i>
                <input type="text" 
                       name="username" 
                       id="username" 
                       class="form-control" 
                       placeholder="Username"
                       required>
                <div class="invalid-feedback">Enter a username</div>
            </div>

            <!-- Email -->
            <div class="mb-3 input-group-custom">
                <i class="fa-solid fa-envelope input-icon"></i>
                <input type="email" 
                       name="email" 
                       id="email" 
                       class="form-control" 
                       placeholder="Email"
                       required>
                <div class="invalid-feedback">Enter a valid email</div>
            </div>

            <!-- Password -->
            <div class="mb-3 input-group-custom">
                <i class="fa-solid fa-lock input-icon"></i>
                <input type="password" 
                       name="password" 
                       id="password" 
                       class="form-control" 
                       placeholder="Password"
                       required>
                <div class="invalid-feedback">Enter a password</div>
            </div>

            <!-- Submit -->
            <button class="btn btn-signup">Sign Up</button>
        </form>

        <!-- Redirect to login -->
        <div class="login-link">
            Already have an account?
            <a href="/login">Log in</a>
        </div>

    </div>
</div>
